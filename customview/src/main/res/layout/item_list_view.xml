<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_view_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="数据"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/list_view_item_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/list_view_item_text_view"/>

        <Button
            android:id="@+id/list_view_item_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn2"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/list_view_item_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn1"
            android:layout_toLeftOf="@id/list_view_item_btn2"
            android:visibility="gone"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/list_view_item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="text       1"
        />
    <TextView
        android:id="@+id/list_view_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="text       2"
        />
    <TextView
        android:id="@+id/list_view_item_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="text       3"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/list_view_item_image_duihao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@mipmap/duihao"/>


</LinearLayout>
